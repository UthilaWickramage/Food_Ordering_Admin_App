<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowWeight="1"
    tools:context=".DashboardActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/imageView3"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_marginStart="24dp"
              app:layout_constraintBottom_toBottomOf="@+id/textView2"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="@+id/textView2"
              app:layout_constraintVertical_bias="0.0"
              app:srcCompat="@drawable/baseline_menu_24" />

          <ImageView
              android:id="@+id/imageView4"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_marginEnd="16dp"
              app:layout_constraintBottom_toBottomOf="@+id/textView2"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="@+id/textView2"
              app:srcCompat="@drawable/baseline_account_circle_24" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="24dp"
              android:text="Dashboard"
              android:textSize="20sp"
              app:layout_constraintEnd_toStartOf="@+id/imageView4"
              app:layout_constraintStart_toEndOf="@+id/imageView3"
              app:layout_constraintTop_toTopOf="parent" />

          <androidx.gridlayout.widget.GridLayout
              android:id="@+id/gridLayout4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="24dp"
              android:layout_marginEnd="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView2"
              app:rowCount="2">

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="185dp"
                  android:layout_height="90dp"
                  android:background="@drawable/text_field"
                  android:backgroundTint="#F44336"
                  android:padding="10dp">

                  <TextView
                      android:id="@+id/textView5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="5"
                      android:textColor="#FFFFFF"
                      android:textSize="24sp"
                      app:layout_constraintStart_toStartOf="@+id/textView3"
                      app:layout_constraintTop_toBottomOf="@+id/textView3" />

                  <TextView
                      android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Delivered Orders"
                      android:textColor="#F4F4F4"
                      android:textSize="14dp"
                      android:textStyle="normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <ImageView
                      android:id="@+id/imageView9"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintBottom_toBottomOf="@+id/textView3"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@+id/textView3"
                      app:srcCompat="@drawable/baseline_delivery_dining_24" />

              </androidx.constraintlayout.widget.ConstraintLayout>

              <Space
                  android:layout_width="10dp"
                  android:layout_height="wrap_content" />

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/constraintLayout"
                  android:layout_width="185dp"
                  android:layout_height="90dp"
                  android:background="@drawable/text_field"
                  android:backgroundTint="#FFC107"
                  android:padding="10dp">

                  <ImageView
                      android:id="@+id/imageView7"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintBottom_toBottomOf="@+id/textView3"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@+id/textView3"
                      app:srcCompat="@drawable/baseline_delivery_dining_24" />

                  <TextView
                      android:id="@+id/textView6"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="5"
                      android:textColor="#FFFFFF"
                      android:textSize="24sp"
                      app:layout_constraintStart_toStartOf="@+id/textView3"
                      app:layout_constraintTop_toBottomOf="@+id/textView3" />

                  <TextView
                      android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pending Orders"
                      android:textColor="#F4F4F4"
                      android:textSize="14dp"
                      android:textStyle="normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />
              </androidx.constraintlayout.widget.ConstraintLayout>

          </androidx.gridlayout.widget.GridLayout>

          <androidx.gridlayout.widget.GridLayout
              android:id="@+id/gridLayout5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="130dp"
              app:layout_constraintEnd_toEndOf="@+id/gridLayout4"
              app:layout_constraintStart_toStartOf="@+id/gridLayout4"
              app:layout_constraintTop_toBottomOf="@+id/textView2"
              app:rowCount="3">

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="120dp"
                  android:layout_height="90dp"
                  android:background="@drawable/text_field"
                  android:backgroundTint="#4CAF50"
                  android:padding="10dp">

                  <TextView
                      android:id="@+id/textView7"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="5"
                      android:textColor="#FFFFFF"
                      android:textSize="24sp"
                      app:layout_constraintStart_toStartOf="@+id/textView3"
                      app:layout_constraintTop_toBottomOf="@+id/textView3" />

                  <TextView
                      android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Users"
                      android:textColor="#F4F4F4"
                      android:textSize="14dp"
                      android:textStyle="normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <ImageView
                      android:id="@+id/imageView5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintBottom_toBottomOf="@+id/textView3"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@+id/textView3"
                      app:srcCompat="@drawable/baseline_supervised_user_circle_24" />
              </androidx.constraintlayout.widget.ConstraintLayout>

              <Space
                  android:layout_width="10dp"
                  android:layout_height="wrap_content" />

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="120dp"
                  android:layout_height="90dp"
                  android:background="@drawable/text_field"
                  android:backgroundTint="#2196F3"
                  android:padding="10dp">

                  <TextView
                      android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Products"
                      android:textColor="#F4F4F4"
                      android:textSize="14dp"
                      android:textStyle="normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <ImageView
                      android:id="@+id/imageView6"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintBottom_toBottomOf="@+id/textView3"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@+id/textView3"
                      app:srcCompat="@drawable/baseline_fastfood_24" />

                  <TextView
                      android:id="@+id/textView9"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="5"
                      android:textColor="#FFFFFF"
                      android:textSize="24sp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/textView3" />
              </androidx.constraintlayout.widget.ConstraintLayout>

              <Space
                  android:layout_width="10dp"
                  android:layout_height="wrap_content" />

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="120dp"
                  android:layout_height="90dp"
                  android:background="@drawable/text_field"
                  android:backgroundTint="#9C27B0"
                  android:padding="10dp">

                  <TextView
                      android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Categories"
                      android:textColor="#F4F4F4"
                      android:textSize="14dp"
                      android:textStyle="normal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <TextView
                      android:id="@+id/textView8"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="5"
                      android:textColor="#FFFFFF"
                      android:textSize="24sp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/textView3" />
              </androidx.constraintlayout.widget.ConstraintLayout>

          </androidx.gridlayout.widget.GridLayout>

          <androidx.gridlayout.widget.GridLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              app:columnCount="2"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="@+id/gridLayout5"
              app:layout_constraintStart_toStartOf="@+id/gridLayout5"
              app:layout_constraintTop_toBottomOf="@+id/gridLayout5"
              app:rowCount="3">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/textView11"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:gravity="center"

                      android:text="View Orders"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:textSize="22dp" />

                  <Space
                      android:layout_width="10dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" />

                  <TextView
                      android:id="@+id/textView10"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:gravity="center"
                      android:text="Add Product"
                      android:textSize="22dp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:orientation="horizontal"
                  app:layout_column="0"
                  app:layout_row="1">

                  <TextView
                      android:id="@+id/textView12"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:gravity="center"
                      android:text="Add Category"
                      android:textSize="22sp" />

                  <Space
                      android:layout_width="10dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" />

                  <TextView
                      android:id="@+id/textView13"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:gravity="center"
                      android:text="View Products"
                      android:textSize="22sp" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:orientation="horizontal"
                  app:layout_column="0"
                  app:layout_row="2">

                  <TextView
                      android:id="@+id/textView14"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:gravity="center"
                      android:text="VIew Categories"
                      android:textSize="22sp" />

                  <Space
                      android:layout_width="10dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" />

                  <TextView
                      android:id="@+id/textView15"
                      android:layout_width="185dp"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dashboard_item_background"
                      android:elevation="5dp"
                      android:gravity="center"
                      android:text="View Users"
                      android:textSize="22sp" />
              </LinearLayout>
          </androidx.gridlayout.widget.GridLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>